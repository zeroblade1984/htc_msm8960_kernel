# bcmdhd
#####################
# SDIO Basic feature
#####################
DHDCFLAGS = -Wall -Wstrict-prototypes -Werror -DLINUX -Dlinux        \
            -DBCMDRIVER -DBCMDONGLEHOST -DUNRELEASEDCHIP -DBCMDMA32  \
            -DDHD_FIRSTREAD=128 -DMAX_HDR_READ=128 -DBCMFILEIMAGE    \
            -DDHDTHREAD -DBDC -DDHD_BCMEVENTS -DSHOW_EVENTS          \
            -DDONGLEOVERLAYS -DBCMDBG -DOOB_INTR_ONLY                \
            -DMMC_SDIO_ABORT -DEMBEDDED_PLATFORM 					 \
            -DBCMSDIO -DBCMLXSDMMC -DBCMPLATFORM_BUS  

#################
# Customer HW2/HW_ONE feature
#################
DHDCFLAGS += -DAPSTA_CONCURRENT 
DHDCFLAGS += -DBRCM_WPSAP
DHDCFLAGS += -DCUSTOMER_HW2
DHDCFLAGS += -DCUSTOMER_HW_ONE
DHDCFLAGS += -DHTC_KlocWork
DHDCFLAGS += -DHAVE_FREE_NETDEV
DHDCFLAGS += -DCONFIG_FIRST_SCAN
DHDCFLAGS += -DCUSTOM_OOB_GPIO_NUM=46
#HTC TX TRACKING feature
DHDCFLAGS += -DHTC_TX_TRACKING
#HTC_REDUCE_FIRST_SCAN
DHDCFLAGS += -DREDUCE_FIRST_SCAN

#################
# Common feature
#################
DHDCFLAGS += -DDHD_GPL
DHDCFLAGS += -DPNO_SUPPORT
DHDCFLAGS += -DKEEP_ALIVE
DHDCFLAGS += -DWIFI_ACT_FRAME
DHDCFLAGS += -DWL_CFG80211
DHDCFLAGS += -DTOE
DHDCFLAGS += -DWLP2P 
DHDCFLAGS += -DDHD_USE_IDLECOUNT 
DHDCFLAGS += -DCONFIG_DHD_USE_STATIC_BUF
DHDCFLAGS += -DWLLXIW 
DHDCFLAGS += -DUSE_IW 

# Early suspend
#DHDCFLAGS += -DDHD_USE_EARLYSUSPEND

# Config PM Control
DHDCFLAGS += -DCONFIG_CONTROL_PM

# WiFi Kernel thread type
DHDCFLAGS += -DUSE_KTHREAD_API

# VSDB
DHDCFLAGS += -DVSDB
DHDCFLAGS += -DPROP_TXSTATUS
DHDCFLAGS += -DPROP_TXSTATUS_VSDB
DHDCFLAGS += -DWL_CFG80211_VSDB_PRIORITIZE_SCAN_REQUEST

#Debug
DHDCFLAGS += -DDHD_DEBUG
DHDCFLAGS += -DDHD_PRINT_DEBUG

# WAPI
DHDCFLAGS += -DBCMWAPI_WAI
DHDCFLAGS += -DBCMWAPI_WPI

# CCX
DHDCFLAGS += -DBCMCCX

# JellyBean
DHDCFLAGS += -DENABLE_INSMOD_NO_FW_LOAD
DHDCFLAGS += -DWL_ENABLE_P2P_IF
DHDCFLAGS += -DWL_CFG80211_STA_EVENT

# JellyBean Plus
DHDCFLAGS += -DOLD_CFG_80211
DHDCFLAGS += -DWL_COMPAT_WIRELESS
DHDCFLAGS += -DWL_SUPPORT_BACKPORTED_KPATCHES

DHDCFLAGS += -DARP_OFFLOAD_SUPPORT

#########################
# Chip dependent feature
#########################

ifneq ($(CONFIG_BCMDHD_4335_MCC),)
  DHDCFLAGS += -DBCM4335_CHIP -DHW_OOB -DSUPPORT_MULTIPLE_REVISION
  DHDCFLAGS += -DENABLE_BCN_LI_BCN_WAKEUP 
  DHDCFLAGS += -DUSE_CID_CHECK
  DHDCFLAGS += -DUSE_DYNAMIC_MAXPKT_RXGLOM
  DHDCFLAGS += -DCUSTOM_RXF_PRIO_SETTING=0
  DHDCFLAGS += -DCUSTOM_DPC_PRIO_SETTING=0
  DHDCFLAGS += -DWL_IFACE_COMB_NUM_CHANNELS
  DHDCFLAGS += -DWL_WIRELESS_EXT
  DHDCFLAGS += -DSOFTAP_ALIGN_PACKET
  DHDCFLAGS += -DROAM_ENABLE
  DHDCFLAGS += -DSOFTAP_DISABLE_VLAN
  DHDCFLAGS += -DSUPPORT_PM2_ONLY
  DHDCFLAGS += -DDISABLE_FW_ROAM_SUSPEND
  DHDCFLAGS += -DUSE_STAMAC_4SOFTAP
  DHDCFLAGS += -DBLOCK_IPV6_PACKET
  DHDCFLAGS += -DPASS_IPV4_SUSPEND
  DHDCFLAGS += -DSUPPORT_DEEP_SLEEP
  DHDCFLAGS += -DSUPPORT_HIDDEN_AP
  DHDCFLAGS += -DSUPPORT_AUTO_CHANNEL
  DHDCFLAGS += -DSUPPORT_SOFTAP_SINGL_DISASSOC
  DHDCFLAGS += -DSUPPORT_GET_NOA
  DHDCFLAGS += -DSUPPORT_AMPDU_MPDU_CMD
  DHDCFLAGS += -DPASS_ALL_MCAST_PKTS
  DHDCFLAGS += -DSCB_TIMEOUT=10
  DHDCFLAGS += -DWIFI_TURNOFF_DELAY=100
  DHDCFLAGS += -DPKT_FILTER_SUPPORT
  DHDCFLAGS += -DMMC_ERROR_WAR

#Throughput fine tune
  DHDCFLAGS += -DBCMSDIOH_TXGLOM
  DHDCFLAGS += -DCUSTOM_GLOM_SETTING=8
  DHDCFLAGS += -DCUSTOM_TXGLOM=1
  DHDCFLAGS += -DCUSTOM_RXCHAIN=1
  DHDCFLAGS += -DBCMSDIOH_TXGLOM_HIGHSPEED
  DHDCFLAGS += -DDHD_SET_FW_HIGHSPEED
  DHDCFLAGS += -DSDIO_CRC_ERROR_FIX
  DHDCFLAGS += -DSDHOST3=1
  DHDCFLAGS += -DRXFRAME_THREAD -DRXF_CHAIN
  DHDCFLAGS += -DDHDTCPACK_SUPPRESS
  DHDCFLAGS += -DCUSTOM_AMPDU_BA_WSIZE=64
  DHDCFLAGS += -DREPEAT_READFRAME
  DHDCFLAGS += -DCUSTOM_DEF_TXGLOM_SIZE=16
  DHDCFLAGS += -DCUSTOM_MAX_TXGLOM_SIZE=16
  DHDCFLAGS += -DWIFI_TURNOFF_DELAY=100
  DHDCFLAGS += -DWLCREDALL

# New Features
  DHDCFLAGS += -DWL11U 
  DHDCFLAGS += -DDHD_ENABLE_LPC
  DHDCFLAGS += -DHT40_GO 
endif

ifneq ($(CONFIG_BCMDHD_4334_MCC),)
  DHDCFLAGS += -DBCM4334_CHIP -DHW_OOB -DSUPPORT_MULTIPLE_REVISION
  DHDCFLAGS += -DDHD_ENABLE_LPC
  DHDCFLAGS += -DCUSTOM_RXF_PRIO_SETTING=0
  DHDCFLAGS += -DCUSTOM_DPC_PRIO_SETTING=0
  DHDCFLAGS += -DWL_IFACE_COMB_NUM_CHANNELS
  DHDCFLAGS += -DWL_WIRELESS_EXT
  DHDCFLAGS += -DSOFTAP_ALIGN_PACKET
  DHDCFLAGS += -DROAM_ENABLE
  DHDCFLAGS += -DSOFTAP_DISABLE_VLAN
  DHDCFLAGS += -DSUPPORT_PM2_ONLY
  DHDCFLAGS += -DDISABLE_FW_ROAM_SUSPEND
  DHDCFLAGS += -DUSE_STAMAC_4SOFTAP
  DHDCFLAGS += -DBLOCK_IPV6_PACKET
  DHDCFLAGS += -DPASS_IPV4_SUSPEND
  DHDCFLAGS += -DSUPPORT_DEEP_SLEEP
  DHDCFLAGS += -DSUPPORT_HIDDEN_AP
  DHDCFLAGS += -DSUPPORT_AUTO_CHANNEL
  DHDCFLAGS += -DSUPPORT_SOFTAP_SINGL_DISASSOC
  DHDCFLAGS += -DSUPPORT_GET_NOA
  DHDCFLAGS += -DSUPPORT_AMPDU_MPDU_CMD
  DHDCFLAGS += -DPASS_ALL_MCAST_PKTS
  DHDCFLAGS += -DSCB_TIMEOUT=10
  DHDCFLAGS += -DWIFI_TURNOFF_DELAY=100
  DHDCFLAGS += -DPKT_FILTER_SUPPORT
  DHDCFLAGS += -DMMC_ERROR_WAR

  #Throughput fine tune
  DHDCFLAGS += -DCUSTOM_RXCHAIN=1
  DHDCFLAGS += -DDHD_SET_FW_HIGHSPEED
  DHDCFLAGS += -DSDIO_CRC_ERROR_FIX
  DHDCFLAGS += -DRXFRAME_THREAD
  DHDCFLAGS += -DDHDTCPACK_SUPPRESS
  DHDCFLAGS += -DCUSTOM_AMPDU_BA_WSIZE=16
  DHDCFLAGS += -DREPEAT_READFRAME
  DHDCFLAGS += -DWIFI_TURNOFF_DELAY=100
  DHDCFLAGS += -DWLCREDALL

# New Features
  DHDCFLAGS += -DWL11U
  DHDCFLAGS += -DDHD_ENABLE_LPC
  DHDCFLAGS += -DHT40_GO

# Remove common feature for BCM4334
  DHDCFLAGS :=$(filter-out -DPROP_TXSTATUS,$(DHDCFLAGS))
  DHDCFLAGS :=$(filter-out -DPROP_TXSTATUS_VSDB,$(DHDCFLAGS))
  DHDCFLAGS :=$(filter-out -DWL_CFG80211_VSDB_PRIORITIZE_SCAN_REQUEST,$(DHDCFLAGS))
endif

DHDCFLAGS += -I$(src) -I$(src)/include


ifdef COMPAT_WIRELESS
NOSTDINC_FLAGS := -I$(COMPAT_WIRELESS)/include/ \
        -include $(COMPAT_WIRELESS)/include/linux/compat-2.6.h
endif

DHDOFILES = dhd_linux.o linux_osl.o bcmutils.o dhd_common.o dhd_custom_gpio.o \
        siutils.o sbutils.o aiutils.o hndpmu.o dhd_sdio.o bcmwifi_channels.o \
        dhd_linux_sched.o dhd_cdc.o bcmsdh_sdmmc.o bcmsdh.o bcmsdh_linux.o    \
        bcmsdh_sdmmc_linux.o bcmevent.o wl_android.o wldev_common.o wl_linux_mon.o wl_cfg80211.o wl_cfgp2p.o dhd_cfg80211.o dhd_wlfc.o dhd_ip.o dhd_pno.o


obj-y += bcmdhd.o
